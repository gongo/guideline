#!/usr/bin/env ruby

$LOAD_PATH.unshift File.expand_path("../../lib/", __FILE__)
require "guideline"
include Guideline

options = Runner.parse(ARGV)

checkers = CheckerFactory.new(
  options[:config],
  LongLineChecker,
  LongMethodChecker,
  HardTabIndentChecker
).create

visitor = Visitor.new(:only => ARGV[0], :checker => checkers)
visitor.visit
visitor.render
